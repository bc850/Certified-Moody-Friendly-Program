<p id="notice"><%= notice %></p>

<div class="container-fluid" id="hero">
  <div class="col-md-2">
    <h3>Component 1</h3>
    <p>Some stuff.</p>
  </div>
  <div class="col-md-6">
    <h1>Discounts</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Start date</th>
          <th>End date</th>
          <th>Category</th>
          <th>Description</th>
          <th>Location</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @discounts.each do |discount| %>
          <tr>
            <td><%= discount.name %></td>
            <td><%= discount.start_date %></td>
            <td><%= discount.end_date %></td>
            <td><%= discount.category %></td>
            <td><%= discount.description %></td>
            <td><%= discount.location %></td>
            <td><%= link_to 'Show', discount %></td>
            <td><%= link_to 'Edit', edit_discount_path(discount) %></td>
            <td><%= link_to 'Destroy', discount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Discount', new_discount_path %>

  </div>
  <div class="col-md-2 col-md-offset-1">
    <div class="row">
      <h3>Testy</h3>
      <p>Paragraph 1</p>
    </div>
    <div class="row">
      <h3>Tester</h3>
      <p>Some more stuff</p>
    </div>
  </div>
</div>
