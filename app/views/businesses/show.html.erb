<% if current_account.sign_in_count == 1 && current_account.accountable_type == "Business" %>
  <% controller.redirect_to edit_business_path %>
<% end %>
<div class="container-fluid" id="hero">
  <div id="offerLeft" class="col-md-3"></div>
  <div class="col-md-6">
    <div class="row">
      <div id="inside" style="margin-top: 15px; text-align: center;">
        <% if @business.status == "Pending" %>
          <h3>Your status is still pending.</h3>
          <p>Please contact an administrator to get your flag lifted.</p>
          <p>You may edit your profile in the Settings tab above.</p>
          <br>
          <br>
        <% end %>
        <div id="mobileBusinessView">
          <%= image_tag(@business.img_url, style: "display: block; margin: auto;") %>
          <br>
          <p>
            <h3><%= @business.name %></h3>
          </p>
          <p>
            <strong>Address:</strong>
            <%= @business.address %>,
            <%= @business.city %>,
            <%= @business.state %>,
            <%= @business.zip_code %>
          </p>
          <p>
            <strong>Category:</strong>
            <%= @business.category %>
          </p>
          <p>
            <strong>Store:</strong>
            <%= @business.store_id %>
          </p>
          <p>
            <strong>Description:</strong>
            <%= @business.description %>
          </p>
          <p>
            <strong>Contact Name:</strong>
            <%= @business.owner_fname %>
            <%= @business.owner_lname %>
          </p>
          <p>
            <strong>Phone number:</strong>
            <a href="tel:?<%= @business.phone_number %>"><%= @business.phone_number %></a>
          </p>
          <p>
            <strong>Website:</strong>
            <a href="<%= @business.link %>"><%= @business.link %></a>
          </p>
          <br>
          <% if @business.status != "Pending" %>
            <%= render "map" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <div id="feedID">
        <h3 style="text-align: center; margin-bottom: 30px !important; margin-top: 60px;"><%= @business.name %> Listings</h3>
      </div>
    </div>
    <div class="row" style="margin-bottom: 20px;">
      <%= render 'listing_partial' %>
    </div>
  </div>
</div>
