<div class="container-fluid" id="hero" style="margin-top: 10px;">
  <div class="col-md-3 favsPartial">
    <% if account_signed_in? %>
      <% if current_account.accountable_type == "User" %>
        <%= render 'favs_partial' %>
      <% elsif current_account.accountable_type == "Business" %>
        <%= render 'my_listings' %>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-6">
    <div class="row">
      <%= render 'my_listings_feed' %>
    </div>
  </div>
  <div class="col-md-3">
    <div class="row" id="comp1">
      <h3>Popular Offers</h3>
      <%= render 'popularity_component' %>
    </div>
  </div>
</div>

