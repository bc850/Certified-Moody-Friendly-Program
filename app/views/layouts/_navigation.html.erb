<header role="banner" class="navbar navbar-fixed-top navbar-inverse" id="banner">
  <div class="container-fluid">
    <div class="navbar-header">
      <div id="logodiv">
        <%= link_to home_path do %>
          <span id="logonameMLink">Moodylink</span>
          <span id="logoname"><%= image_tag("Badge2.png") %></span>
        <% end %>
        <% if account_signed_in? %>
          <ul class="nav navbar-nav pull-right" >
            <%= render 'layouts/navigation_links' %>
          </ul>
        <% else %>
          <div class="pull-right">
            <!--
            <form id="navForm" action="accounts/sign_in" method="POST">
              <input id="navFormInputs" type="text" name="uid" placeholder="Username">
              <input id="navFormInputs" type="password" name="pwd" placeholder="Password">
              <button id="navSubmit" type="submit" name="submit">Login</button>
            </form>
            -->

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs form-inline">
                <%= f.input :email, required: false, autofocus: true %>
                <%= f.input :password, required: false %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                <span id="navSubmit"><%= f.button :submit, "Log in" %></span>
              </div>
            <% end %>

          </div>
        <% end %>
      </div>
    </div>
  </div>
</header>
