    <% end %>
  </div>
  <div class="col-xs-10 col-md-5">
    <div class="row">
      <%= render 'feed_partial' %>
    </div>
  </div>
  <div class="col-md-3">
    <div class="row" id="comp1">
      <h3>Popular Offers</h3>
      <%= render 'popularity_component' %>
    </div>
