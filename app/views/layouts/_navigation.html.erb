<header role="banner" class="navbar navbar-fixed-top navbar-inverse" id="banner">
  <div class="container-fluid">
    <div class="navbar-header">
      <div id="logodiv">
        <%= link_to home_path do %>
          <span id="logonameMLink">Moodylink</span>
          <span id="logoname"><%= image_tag("Badge2.png") %></span>
        <% end %>
        <% @tester = 1 %>
        <% if @tester == 0 %>
          <button class="navbar-toggle pull-right" id="navButton">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <% elsif @tester == 1 %>
          <form class="pull-right" id="navForm" action="includes/login.inc.php" method="POST">
            <input id="navFormInputs" type="text" name="uid" placeholder="Username">
            <input id="navFormInputs" type="password" name="pwd" placeholder="Password">
            <button id="navSubmit" type="submit" name="submit">Login</button>
          </form>
        </div>
        <% end %>
    </div>
  </div>
</header>
