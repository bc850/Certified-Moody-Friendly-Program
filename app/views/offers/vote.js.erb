<% if current_account.liked? @offer %>
  $("#like_<%= @offer.id %>").removeClass('glyphicon-heart-empty').addClass('glyphicon-heart');
  $("#like_<%= @offer.id %>").attr("href", '/offers/<%= @offer.id %>/like');
<% else %>
  $("#like_<%= @offer.id %>").removeClass('glyphicon-heart').addClass('glyphicon-heart-empty');
  $("#like_<%= @offer.id %>").attr("href", '/offers/<%= @offer.id %>/like');
<% end %>

$('.likes-count').html("<%= @offer.get_upvotes.size %>")
